{% if items is defined and items is not empty %}
    <div class="border-bottom h4 pb-1 text-gray-200 d-md-none">{{ title|format('')|raw }}</div>
    <div class="row pt-3 pt-md-5">
        {% for item in items %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="border-md-bottom-1 h5 pb-1">
                    {% set item_title = render_post_data('title', item) %}
                    <a href="{{ get_permalink(parent) }}" class="text-decoration-none text-gray-200 hover-gray-100"
                       title="{{ title|format(item_title)|esc_attr }}">{{ title|format(item_title)|raw }}</a>
                </div>
                <ul class="list-group border-0 bg-transparent d-none d-md-block">
                    {% for child in item.children %}
                        <li class="list-group-item border-0 py-1 px-0 bg-transparent">
                            {% set child_title = render_post_data('title', child) %}
                            <a href="{{ get_permalink(child) }}"
                               class="text-decoration-none text-gray-200 hover-gray-100"
                               title="{{ child_title|esc_attr }}">{{ child_title|raw }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
{% endif %}
