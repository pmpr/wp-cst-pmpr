{% if items is defined and items is not empty %}
    <div class="mt-0 mt-sm-4 my-md-0 mt-lg-4 my-xl-0">

        {% set div_class = 'd-flex d-sm-inline-block d-md-flex d-lg-inline-block d-xl-flex pb-2' %}
        {% for id, technology in items %}
            {% set hide = loop.index > 6 %}
            {% if loop.first %}
                <div class="{{ div_class|esc_attr }}">
            {% endif %}
            {% embed get_include_template('link') with {
                attrs: {
                    rel: 'nofollow',
                    title: get_title(technology),
                    class: 'p-1' ~  (hide ? ' d-block d-md-none d-lg-block d-xl-none': '')
                },
                item: id,
                url: get_permalink(technology),
            } %}
                {% block content %}
                    {% include get_include_template('render_image') with {
                        id: technology,
                        size: 'samll',
                        class: 'icon-primary el-circle-' ~ (is_manager ? 'xs' : '2xs')
                    } %}
                {% endblock %}
            {% endembed %}
            {% if loop.index % 3 == 0 and not loop.last %}
                </div>
                <div class="{{ div_class|esc_attr }}">
            {% endif %}

            {% if loop.last %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}